package bg.softuni.fundamentals;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int number = Integer.parseInt(scanner.nextLine());

        System.out.println("The number " + number + " is " + integerSign(number) + ".");
    }

    public static String integerSign(int number) {
        if (number == 0) {
            return "zero";
        } else if(number < 0) {
            return "negative";
        }
        return "positive";
    }
}
